#!/bin/sh
#  /service/smtpd/log
#    with recordio
exec \
setuidgid log \
multilog t \
-'* * > *' \
-'* * < *' \
s500000 \
./main \
-'*' \
+'* * < HELO *' \
+'* * < EHLO *' \
+'* * < AUTH *' \
+'* * < MAIL *' \
+'* * < RCPT *' \
+'* * < DATA*' \
+'* * < QUIT*' \
+'* * < RSET*' \
+'* * < NOOP*' \
+'* * < X-Mailer:*' \
+'* * > 1*' \
+'* * > 2*' \
+'* * > 3*' \
+'* * > 4*' \
+'* * > 5*' \
s1000000 \
./tcp \
-'*' \
'+* * status: *' \
=status

